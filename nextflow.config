manifest {
    homePage = 'http://umccr.github.io'
    description = 'BWA AWS vs NCI test'
}

aws {
	region = 'ap-southeast-2'
}


profiles {
	standard {
		process.executor = 'local'
	}

	cluster-raijin {
		process.executor = 'pbs'
		process.queue = 'express'
		process.memory = '8 GB'
		process.module = 'java'
		process.scratch = '/g/data/gx8/projects/nextflow-benchmarking'
	}
	
	cluster-spartan {
		process.executor = 'slurm'
		process.queue = 'normal'
		process.memory = '8 GB'
	}

	cloud {
		imageId = 'ami-f3dfdd90'
		instanceType = 't2.small'
		bootStorageSize = '10 GB'
		userName = 'ubuntu'
		process.scratch = '/mnt/work/nextflow-benchmark'
		/* 
		   spotPrice = '1.8'
		*/
	}

	kubernetes {
		process.executor = 'k8s'
		process.container = 'bcbio/bcbio:latest'
		cpus = 1
		memory = '1 GB'
		/* container = "quay.io/biocontainers/bcbio-nextgen:1.0.1--py27_0" */
	}
}
